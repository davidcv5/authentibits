---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import NewsletterForm from "../components/NewsletterForm.astro";
import { SITE_TITLE } from "../consts";

const title = `Subscribe - ${SITE_TITLE}`;
const description = "Stay updated with the latest posts via newsletter or RSS feed.";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
    <style>
      main {
        width: 800px;
        max-width: calc(100% - 2rem);
        margin: auto;
        padding: 4rem 1rem;
      }

      .page-header {
        text-align: center;
        margin-bottom: 4rem;
      }

      .page-header h1 {
        font-size: 3.5rem;
        font-weight: 900;
        letter-spacing: -0.03em;
        margin: 0 0 1rem;
        background: linear-gradient(135deg, #007cf0, #00dfd8);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
      }

      .page-header p {
        font-size: 1.25rem;
        color: #666;
        margin: 0;
        line-height: 1.6;
      }

      .subscribe-options {
        display: grid;
        gap: 2rem;
      }

      .subscribe-card {
        background: #fff;
        border: 1px solid #eee;
        border-radius: 16px;
        padding: 2rem;
      }

      .subscribe-card h2 {
        font-size: 1.5rem;
        font-weight: 700;
        margin: 0 0 0.75rem;
        display: flex;
        align-items: center;
        gap: 0.75rem;
      }

      .subscribe-card h2 svg {
        flex-shrink: 0;
      }

      .subscribe-card > p {
        color: #666;
        line-height: 1.6;
        margin: 0 0 1.5rem;
      }

      .rss-link {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.875rem 1.5rem;
        font-size: 1rem;
        font-weight: 600;
        color: #f97316;
        background: #fff7ed;
        border: 2px solid #fed7aa;
        border-radius: 10px;
        text-decoration: none;
        transition: all 0.2s ease;
      }

      .rss-link:hover {
        background: #ffedd5;
        border-color: #fdba74;
        transform: translateY(-2px);
      }

      .rss-url {
        margin-top: 1rem;
        padding: 1rem;
        background: #f8fafc;
        border-radius: 8px;
        font-family: monospace;
        font-size: 0.875rem;
        color: #64748b;
        word-break: break-all;
      }

      .rss-readers {
        margin-top: 1.5rem;
        padding-top: 1.5rem;
        border-top: 1px solid #eee;
      }

      .rss-readers h3 {
        font-size: 0.875rem;
        font-weight: 600;
        color: #94a3b8;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        margin: 0 0 0.75rem;
      }

      .reader-links {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
      }

      .reader-links a {
        font-size: 0.875rem;
        color: #007cf0;
        text-decoration: none;
        padding: 0.375rem 0.75rem;
        background: #f0f9ff;
        border-radius: 6px;
        transition: background 0.2s ease;
      }

      .reader-links a:hover {
        background: #e0f2fe;
      }

      @media (max-width: 600px) {
        .page-header h1 {
          font-size: 2.5rem;
        }

        .subscribe-card {
          padding: 1.5rem;
        }
      }
    </style>
  </head>
  <body>
    <Header />
    <main>
      <div class="page-header">
        <h1>Stay Updated</h1>
        <p>Never miss a post. Choose your preferred way to subscribe.</p>
      </div>

      <div class="subscribe-options">
        <div class="subscribe-card">
          <h2>
            <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="#007cf0" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect width="20" height="16" x="2" y="4" rx="2"/>
              <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/>
            </svg>
            Email Newsletter
          </h2>
          <p>
            Get new posts delivered directly to your inbox. No spam, just quality content.
            Unsubscribe anytime with one click.
          </p>
          <NewsletterForm variant="inline" showDescription={false} />
        </div>

        <div class="subscribe-card">
          <h2>
            <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="#f97316" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M4 11a9 9 0 0 1 9 9"/>
              <path d="M4 4a16 16 0 0 1 16 16"/>
              <circle cx="5" cy="19" r="1"/>
            </svg>
            RSS Feed
          </h2>
          <p>
            Prefer RSS? Subscribe using your favorite feed reader for complete control
            over your reading experience.
          </p>
          <a href="/rss.xml" class="rss-link">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M4 11a9 9 0 0 1 9 9"/>
              <path d="M4 4a16 16 0 0 1 16 16"/>
              <circle cx="5" cy="19" r="1"/>
            </svg>
            Subscribe via RSS
          </a>
          <div class="rss-url">
            https://authentibits.web.app/rss.xml
          </div>
          <div class="rss-readers">
            <h3>Popular RSS Readers</h3>
            <div class="reader-links">
              <a href="https://feedly.com" target="_blank" rel="noopener">Feedly</a>
              <a href="https://inoreader.com" target="_blank" rel="noopener">Inoreader</a>
              <a href="https://newsblur.com" target="_blank" rel="noopener">NewsBlur</a>
              <a href="https://netnewswire.com" target="_blank" rel="noopener">NetNewsWire</a>
              <a href="https://reeder.app" target="_blank" rel="noopener">Reeder</a>
            </div>
          </div>
        </div>
      </div>
    </main>
    <Footer />
  </body>
</html>
