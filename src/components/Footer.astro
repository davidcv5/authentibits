---
import NewsletterForm from "./NewsletterForm.astro";

const today = new Date();
---

<footer>
  <div class="footer-content">
    <div class="newsletter-section">
      <NewsletterForm />
    </div>

    <div class="footer-bottom">
      <p>&copy; {today.getFullYear()} David Cruz. All rights reserved.</p>
      <div class="footer-links">
        <a href="/rss.xml" class="rss-link" title="RSS Feed">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M4 11a9 9 0 0 1 9 9"/>
            <path d="M4 4a16 16 0 0 1 16 16"/>
            <circle cx="5" cy="19" r="1"/>
          </svg>
          <span class="sr-only">RSS Feed</span>
        </a>
        <a href="https://github.com/davidcv5" target="_blank">
          <span class="sr-only">Visit David's GitHub</span>
          <svg viewBox="0 0 16 16" aria-hidden="true" width="20" height="20">
            <path
              fill="currentColor"
              d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
            />
          </svg>
        </a>
      </div>
    </div>
  </div>
</footer>
<style>
  footer {
    padding: 4rem 2rem 6rem;
    background: #fff;
    border-top: 1px solid #eee;
    margin-top: 8rem;
  }
  .footer-content {
    max-width: 600px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }
  .newsletter-section {
    width: 100%;
  }
  .footer-bottom {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    padding-top: 2rem;
    border-top: 1px solid #eee;
  }
  .footer-bottom p {
    margin: 0;
    color: #666;
    font-size: 0.875rem;
  }
  .footer-links {
    display: flex;
    gap: 1rem;
  }
  .footer-links a {
    color: #999;
    transition: color 0.2s ease;
  }
  .footer-links a:hover {
    color: #000;
  }
  .rss-link:hover {
    color: #f97316;
  }
</style>
